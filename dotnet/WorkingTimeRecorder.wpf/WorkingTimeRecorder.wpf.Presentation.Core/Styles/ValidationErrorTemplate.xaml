<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ControlTemplate x:Key="ValidationErrorEmptyTemplate">
        <AdornedElementPlaceholder />
    </ControlTemplate>

    <ControlTemplate x:Key="ValidationErrorTextBlockTemplate">
        <StackPanel>
            <Border BorderBrush="#FF5A00" BorderThickness="1"
                    HorizontalAlignment="Left"
                    Width="{Binding Path=ActualWidth, ElementName=SourceElement}">
                <AdornedElementPlaceholder x:Name="SourceElement" />
            </Border>
            <TextBlock Background="#FF5A00" Foreground="White" Text="{Binding AdornedElement.(Validation.Errors)[0].ErrorContent, ElementName=SourceElement}"
                       ToolTip="{Binding Path=Text, RelativeSource={RelativeSource Self}}" />
        </StackPanel>
    </ControlTemplate>
</ResourceDictionary>